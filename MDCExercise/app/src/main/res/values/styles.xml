<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--style for the collapsing toolbar-->
    <style name="CollapsingToolbarStyle" parent="">
        <item name="collapsedTitleTextAppearance">@style/Logo.TextAppearance</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleGravity">top</item>
        <item name="expandedTitleMarginStart">124dp</item>
        <item name="expandedTitleMarginTop">140dp</item>
        <item name="expandedTitleTextAppearance">@style/Logo.TextAppearance</item>
        <item name="scrimVisibleHeightTrigger">140dp</item>
    </style>

    <!--style for the app title-->
    <style name="Logo.TextAppearance" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#8bc34a</item>
    </style>

    <!--style for the image in the app bar-->
    <style name="CollapsingToolbarImageStyle" parent="">
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginLeft">-124dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!--style for the text views in the app bar-->
    <style name="CollapsingToolbarContentStyle" parent="">
        <item name="android:layout_marginTop">160dp</item>
        <item name="android:layout_marginLeft">124dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
